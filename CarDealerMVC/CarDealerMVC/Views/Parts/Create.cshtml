@model PartViewModel
<div class="col-md-6" style="position:center">
    <form asp-action="Create" method="post">
        Name:  <input asp-for="Name" /> <br /> <span asp-validation-for="Name" class="text-danger"></span>
        Price: <input asp-for="Price" type="number"/><br /><span asp-validation-for="Price" class="text-danger"></span>
        Quantity: <input asp-for="Quantity" type="number" /><br /><span asp-validation-for="Quantity" class="text-danger"></span>
        Supplier:
        <select asp-for="Supplier">
            @foreach (var supplier in Model.Suppliers)
            {
                <option>@supplier.Name</option>
            }
        </select><span asp-validation-for="Supplier" class="text-danger"></span>
        <input type="submit" class="btn btn-default" value="Create Part" />
    </form>
</div>
