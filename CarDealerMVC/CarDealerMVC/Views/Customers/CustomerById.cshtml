@model CustomerViewModel
<table>
    <tr>
        <th>Name</th>
        <th>Bought Cars</th>
        <th>Money Spended</th>
    </tr>
    <tr>
        <td>@Model.Name</td>
        <td>@Model.Cars.BoughtCars </td>
        <td>@String.Format("{0:0.00}",Model.Cars.MoneySpended)</td>
        <td><a asp-area="" asp-controller="Customers" asp-action="Edit" asp-route-id=@Model.Id>Edit</a></td>
    </tr> 
</table>
