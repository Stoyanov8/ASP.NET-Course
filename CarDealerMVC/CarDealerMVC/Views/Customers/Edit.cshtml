@model CustomerViewModel
<div class="col-md-6" style="position:center">
    <form asp-action="Edit" method="post">
        Name:  <input asp-for="Name" value="@Model.Name" /><span asp-validation-for="Name" class="text-danger"></span> <br />
        BirthDate: <input asp-for="BirthDate" type="date" value="@Model.BirthDate" /><span asp-validation-for="BirthDate" class="text-danger"></span> <br /><br />
        <input type="submit" class="btn btn-default" value="Edit Customer" />
    </form>
</div>